{
    "name": "Obsidian Plugin",
    "version": "0.1.0",
    "manifest_version": 3,
    "description": "Copy page metadata into *.md format for Obsidian",
    "background": {
        "service_worker": "background.js"
    },
    "options_ui": {
        "page": "options.html",
        "open_in_tab": true
    },
    "action": {
        "default_title": "Copy page metadata into Obsidian"
    },
    "permissions": [
        "tabs",
        "activeTab",
        "clipboardWrite",
        "storage"
    ],
    "icons": { 
        "16": "icons/favicon-16x16.png",
        "48": "icons/favicon-48x48.png",
        "32": "icons/favicon-32x32.png",
        "128": "icons/favicon-128x128.png"
    }
}